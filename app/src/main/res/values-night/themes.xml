<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OneDayCoupleDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_pink</item>
        <item name="colorPrimaryVariant">@color/pink_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OneDayCoupleDiary.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/pink_300</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/splash_screen
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
        <!--<item name=”android:windowSplashScreenIconBackground”>@color/...</item>
        <item name=”android:windowSplashScreenBrandingImage”>@drawable/...</item>-->
        <item name="postSplashScreenTheme">@style/Theme.OneDayCoupleDiary</item>
    </style>

</resources>